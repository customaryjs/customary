{
  "include": ["src/**/*"],
  "compilerOptions": {
      "declaration": true,
      "outDir": "web/_script",
      "rootDir": "src",
      "paths": {
        "#customary/*": ["./src/*"],
        "knockout/": ["./node_modules/knockout/build/types/knockout/"],
      },
      // ---- CODING STANDARDS TYPICAL FOR ALL PROJECTS START HERE ----
      "allowJs": false,
      "module": "esnext",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "sourceMap": true,
      "strict": true,
      "target": "es2022"
  }
}