{
  "name": "customary",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "// ---- public ---- //": "//",
    "compile": "wireit",
    "build": "wireit",
    "test": "wireit",
    "// ---- make ---- //": "//",
    "dist": "wireit",
    "// ---- dev ---- //": "//",
    "dev": "wireit",
    "compile:watch": "wireit",
    "clean": "wireit",
    "// ---- command ---- //": "//",
    "dist:*": "wireit",
    "test:in-src-dir": "wireit",
    "test:in-____-dir": "wireit",
    "// ---- help ---- //": "//",
    "help": "wireit"
  },
  "wireit": {
    "help": {
      "command": "echo WIREIT_LOGGER=metrics npm run dist"
    },
    "test": {
      "dependencies": [
        "test:in-src-dir",
        "test:integration"
      ]
    },
    "test:in-src-dir": {
      "command": "____IN_DIR=src npm run test:in-____-dir",
      "dependencies": [
        "compile"
      ]
    },
    "test:in-____-dir": {
      "command": "cd ${____IN_DIR} && echo 'cd ../customary-cookbook && npm test'"
    },
    "dist": {
      "command": "npm run dist:*",
      "dependencies": ["build"]
    },
    "dist:without:test": {
      "command": "npm run dist:*",
      "dependencies": [
        "clean:dist",
        "dist:participants:then:build"
      ]
    },
    "dist:*": {
      "dependencies": ["dist:bundles", "dist:library"]
    },
    "dist:bundles": {
      "help:command": "https://github.com/parcel-bundler/parcel/issues/2540#issuecomment-454172473",
      "command": "parcel build --log-level=info"
    },
    "dist:library": {
      "command": "npx webpack"
    },
    "clean:dist": {
      "command": "rimraf .dist .parcel-cache"
    },
    "test:in-dist-dir": {
      "command": "____IN_DIR=.dist/$(cat package-json-dist-what.txt) npm run test:in-____-dir"
    },
    "test:integration": {
      "dependencies": [
        "../customary-cookbook:test"
      ]
    },
    "build": {
      "command": "npm run compile",
      "dependencies": [
        "clean:src"
      ]
    },
    "dist:participants:then:build": {
      "command": "npm run build",
      "dependencies": [
        "dist:participants"
      ]
    },
    "compile": {
      "command": "tsc --build --pretty --verbose"
    },
    "clean": {
      "dependencies": [
        "clean:src"
      ]
    },
    "clean:src": {
      "command": "rimraf --glob src/**/*.{d.ts,js.map,js} --glob tsconfig.tsbuildinfo"
    },
    "dev": {
      "command": "npm run compile:watch",
      "service": true
    },
    "compile:watch": {
      "command": "tsc --build --pretty --verbose --watch",
      "service": true
    },
    "dist:participants": {
      "dependencies": [
      ]
    }
  },
  "dependencies": {
    "@lit/reactive-element": "^2.1.0",
    "lit": "^3.3.0",
    "lit-html": "^3.3.0"
  },
  "devDependencies": {
    "@parcel/transformer-typescript-tsc": "^2.13.0",
    "@parcel/transformer-typescript-types": "^2.13.0",
    "@types/node": "^20.17.6",
    "copy-webpack-plugin": "^12.0.2",
    "parcel": "^2.12.0",
    "remove-files-webpack-plugin": "^1.5.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "wireit": "^0.14.9"
  },
  "imports": {
    "#customary/*.js": "./src/*.ts",
    "#customary/lit": "./src/lit/index.ts"
  },
  "help:main": "https://parceljs.org/features/targets/#library-targets",
  "target:bundle:customary.mjs": ".dist/bundled/customary.mjs",
  "target:bundle:customary-library.mjs": ".dist/bundled/customary-library.mjs",
  "targets": {
    "target:bundle:customary.mjs": {
      "source": "./src/now.ts",
      "context": "browser",
      "isLibrary": true,
      "optimize": false,
      "includeNodeModules": [
        "lit",
        "lit-element",
        "lit-html",
        "@lit/reactive-element"
      ],
      "sourceMap": {
        "inline": true
      }
    },
    "target:bundle:customary-library.mjs": {
      "source": "./src/index.ts",
      "context": "browser",
      "isLibrary": true,
      "optimize": false,
      "includeNodeModules": [
        "lit",
        "lit-element",
        "lit-html",
        "@lit/reactive-element"
      ],
      "sourceMap": {
        "inline": true
      }
    }
  },
  "@parcel/resolver-default": {
    "packageExports": true
  },
  "license": "MIT",
  "author": "Andre de Oliveira"
}
