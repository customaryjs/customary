{
  "name": "customary",
  "version": "1.0.0",
  "scripts": {
    "// ---- public ---- //": "",
    "dist": "copyfiles --error --all \"web/**/*\" \"src/**/*\" .dist",
    "help:dist": "echo we copy src because it lets browsers step debug .ts files",
    "clean": "rimraf web/_script .dist",
    "clean-src": "rimraf --glob src/**/*.d.ts src/**/*.js.map src/**/*.js",
    "dev": "npm run compile-watch",
    "// ---- pre & post ---- //": "",
    "predist": "npm run clean && npm run compile",
    "// ---- private ---- //": "",
    "compile-watch": "tsc --build --verbose --watch",
    "compile": "tsc --build --verbose"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.14.2",
    "copyfiles": "^2.4.1",
    "http-server": "^14.1.1",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.1",
    "sinon": "^15.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": "20.14.0"
  },
  "license": "Apache-2.0",
  "author": "Andre de Oliveira"
}
